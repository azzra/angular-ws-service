{
    "env": {
        "browser": true
    },
    "globals": {
        "angular": false
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-alert": [
            "error"
        ],
        "curly": [
            "error"
        ],
        "eqeqeq": [
            "error",
            "smart"
        ],
        "no-catch-shadow": [
            "error"
        ],
        "brace-style": [
            "error"
        ],
        "camelcase": [
            "warn"
        ],
        "keyword-spacing": [
            "error",
            { "before": true, "after": true }
        ]
    }
}
